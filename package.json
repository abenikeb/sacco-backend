		"prisma:migrate": "prisma migrate dev",
		"prisma:studio": "prisma studio",
		"db:seed": "ts-node prisma/seed.ts",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write .",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@prisma/client": "^6.13.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.2",
		"cookie": "^1.0.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"jose": "^6.0.12",
		"luxon": "^3.7.1",
		"mime": "^4.0.7",
		"multer": "^2.0.2",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"xlsx": "^0.18.5",
		"xmlrpc": "^1.3.2"
	},
