{
	"name": "Melakm Solutions",
	"version": "1.0.0",
	"description": "A backend service for managing members, loans, and savings using Prisma, Express, and PostgreSQL.",
	"main": "dist/index.js",
	"author": "melkam.solutions@mlk.com",
	"license": "MIT",
	"keywords": [
		"express",
		"prisma",
		"typescript",
		"postgresql",
		"microfinance",
		"loan-management"
	],
	"scripts": {
		"dev": "ts-node -r tsconfig-paths/register src/server.ts",
		"dev:nodemon": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
