		"@types/node": "^24.1.0",
		"@types/xmlrpc": "^1.3.10",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.3.3",
		"prisma": "^6.13.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3"
